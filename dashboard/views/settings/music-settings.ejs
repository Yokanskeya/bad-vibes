                <option value="ğŸš Earrape Bass">ğŸš Earrape Bass</option>
                <option value="ğŸ”Š 8D">ğŸ”Š 8D</option>
                <option value="â†©ï¸ Reset">â†©ï¸ Reset</option>
              </select>
              <% } else { %>
              <label for="filter" class="form-label">Available Filter: <i class="fas fa-gem"
                  style="color: #f0a3ff; margin-left: 10px; margin-top: 5px;" data-bs-toggle="popover2"
                  data-bs-trigger="hover" data-bs-content="Your Guild Not Premium!" data-bs-placement="top"></i></label>
              <script>
                var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover2"]'))
                var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                  return new bootstrap.Popover(popoverTriggerEl)
                })
              </script>
              <select class="form-select" id="filter" name="filter">
                <option selected disabled value="">Select Your Filter Music Here...</option>
                <option disabled value="ğŸ’¯ Vibrato">ğŸ’¯ Vibrato</option>
                <option disabled value="ğŸ’¢ Vibrate">ğŸ’¢ Vibrate</option>
                <option disabled value="ğŸ® Tremolo">ğŸ® Tremolo</option>
                <option disabled value="â± Speed">â± Speed</option>
                <option disabled value="â± Slowmode">â± Slowmode</option>
                <option disabled value="ğŸ“‰ Rate">ğŸ“‰ Rate</option>
                <option disabled value="ğŸ“ˆ Pitch">ğŸ“ˆ Pitch</option>
                <option disabled value="ğŸ‘» Nightcore">ğŸ‘» Nightcore</option>
                <option disabled value="ğŸ‘¾ Darth Vader">ğŸ‘¾ Darth Vader</option>
                <option disabled value="ğŸ¿ï¸ Chipmunk">ğŸ¿ï¸ Chipmunk</option>
